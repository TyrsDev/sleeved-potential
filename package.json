{
  "name": "sleeved-potential",
  "private": true,
  "type": "module",
  "scripts": {
    "ci": "pnpm install --frozen-lockfile && pnpm lint && pnpm typecheck",
    "typecheck": "pnpm -r typecheck",
    "build": "pnpm -r build",
    "build:shared": "pnpm --filter @sleeved-potential/shared build",
    "build:functions": "pnpm --filter functions build",
    "build:game": "pnpm --filter game build",
    "build:admin": "pnpm --filter admin build",
    "dev:game": "pnpm --filter game dev",
    "dev:admin": "pnpm --filter admin dev",
    "lint": "pnpm -r lint",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@9.15.4"
}
