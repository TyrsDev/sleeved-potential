{
  "name": "sleeved-potential",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "pnpm build:shared",
    "sync:shared": "rm -rf functions/shared && cp -r shared functions/shared",
    "ci": "pnpm install --frozen-lockfile && pnpm build:shared && pnpm lint && pnpm typecheck",
    "typecheck": "pnpm -r typecheck && cd functions && npm run typecheck",
    "build": "pnpm -r build && cd functions && npm run build",
    "build:shared": "pnpm --filter @sleeved-potential/shared build && pnpm sync:shared",
    "build:functions": "cd functions && npm run build",
    "build:game": "pnpm --filter game build",
    "build:admin": "pnpm --filter admin build",
    "dev:game": "pnpm --filter game dev",
    "dev:admin": "pnpm --filter admin dev",
    "lint": "pnpm -r lint",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@9.15.4"
}
