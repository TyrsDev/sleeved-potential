rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.hasAny(['ADMIN']);
    }

    // Users collection
    match /users/{odIduserId} {
      allow read: if isSignedIn();
      allow create: if isOwner(odIduserId);
      allow update: if isOwner(odIduserId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Username uniqueness collection
    // Read: signed in users (for checking availability)
    // Write: Cloud Functions only (atomic username reservation)
    match /usernames/{username} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    // Rules collection (game configuration)
    // Read: signed in users
    // Write: admins only
    match /rules/{ruleId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Challenges collection
    match /challenges/{challengeId} {
      allow read: if isSignedIn() && (
        resource.data.creatorId == request.auth.uid ||
        resource.data.opponentId == request.auth.uid ||
        resource.data.opponentId == null  // matchmaking visible to all
      );
      // Write only via Cloud Functions
      allow write: if false;
    }

    // Games collection
    match /games/{gameId} {
      allow read: if isSignedIn() && request.auth.uid in resource.data.players;
      // Write only via Cloud Functions
      allow write: if false;

      // Player-specific game state subcollection
      // Each player can only read their own state document
      match /playerState/{odIdplayerId} {
        allow read: if isSignedIn() && request.auth.uid == resource.data.odIduserId;
        // Write only via Cloud Functions
        allow write: if false;
      }
    }

    // Cards collection (admin-editable)
    match /cards/{cardId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
